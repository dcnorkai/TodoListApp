<!-- RegisterPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TodoListApp.Views"
             x:Class="TodoListApp.Views.RegisterPage">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <!-- User creation UI components go here -->
        <Entry Text="{Binding Email}" Placeholder="Email" x:Name="emailEntry" />
        <Entry Text="{Binding Username}" Placeholder="Username" x:Name="usernameEntry" />
        <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True" x:Name="passwordEntry" />
        <!-- <DatePicker Date="{Binding DateofBirth}" -->
        <Button Text="Create Account" Clicked="OnCreateAccountClicked" />
    </StackLayout>

</ContentPage>